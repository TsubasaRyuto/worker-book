<% provide(:title, 'Information') %>

<section class="client-user-setting user-setting">
  <div class="container">
    <div class="row">
      <div class="body col-md-8 col-md-offset-1">
        <div class="row">
          <div class="name">
            <h2><%= @client_user.last_name %> <%= @client_user.first_name %></h2>
            <%= link_to client_client_settings_account_path(client_clientname: @client_user.client.clientname, username: @client_user.username) do %>
              <p>@<%= @client_user.username %></p>
          </div>
          <% end %>
          <div class="edit-form col-md-12">
            <h3>Information</h3>
            <%= form_for(@client_user, url: { controller: :client_users, action: :update }) do |f| %>
              <div class="field-block row">
                <div class="col-md-3">
                  <%= f.label :username, class: 'form-label' %>
                </div>
                <div class="col-md-8">
                  <%= f.text_field :username, class: 'form-control', autocomplete: 'off' %>
                  <%= render 'shared/error', object: f.object, field: :username %>
                </div>
              </div>

              <div class="field-block row">
                <div class="col-md-3">
                  <%= f.label :email, 'Emailaddress', class: 'form-label' %>
                </div>
                <div class="col-md-8">
                  <%= f.email_field :email, class: 'form-control', autocomplete: 'off' %>
                  <%= render 'shared/error', object: f.object, field: :email %>
                </div>
              </div>

              <%= f.submit "変更を保存", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="account-other col-md-12">
            <p><%= link_to 'パスワード変更',  new_password_reset_path %></p>
            <p><%= link_to 'アカウント削除', retire_client_user_path(client_clientname: @client_user.client.clientname, username: @client_user.username) %></p>
          </div>
        </div>
      </div>
      <div class="side col-md-3">
        <%= render 'clients/commons/description' %>
      </div>
    </div>
  </div>
</section>
