<header class="intro">
  <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
      <div class="row">
        <div class="navbar-header">
          <h1><%= link_to 'WorkerBook', root_path, id: 'top' %></h1>

          <button type="button" class="navbar-toggle cllapsed" data-toggle="collapse" data-target="#header-navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

          <div class="collapse navbar-collapse" id="header-navbar" role='navigation'>
            <ul class="nav navbar-nav navbar-right">
              <% if signed_in? %>
                <li class="dropdown">
                  <a href="#" calss="dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-menu-hamburger"></span><%= current_user.username %>
                  </a>
                  <ul class="dropdown-menu">

                    <% if worker_profile_present? %>
                      <li><%= link_to "Profile", worker_path(username: current_user.username) %></li>
                      <li><%= link_to "Settings", worker_settings_account_path(username: current_user.username) %></li>
                    <% else %>
                      <li><%= link_to "Delete Account", retire_worker_path(username: current_user.username) %></li>
                    <% end %>
                  </ul>
                  <li>
                    <%= link_to sign_out_path do %>
                      <span class="glyphicon glyphicon-log-out"></span>Sign out
                    <% end %>
                  </li>
                </li>
              <% else %>
                <li>
                  <%= link_to sign_in_path do %>
                    <span class="glyphicon glyphicon-log-in"></span>Sign in
                  <% end %>
                </li>
                <li>
                  <%= link_to sign_up_path do %>
                    <span class="glyphicon glyphicon-pencil"></span>Sign up
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
      </div>
    </div>
  </div>
</header>
