<% provide(:title, 'Sign in') %>

<selction class="sign-in">
  <div class="container">
    <div class="row">
      <div class="signin-form col-md-8 col-md-offset-2">
        <h1>サインイン</h1>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= form_for(:session, url: sign_in_path) do |f| %>
              <%= f.email_field :email, class: 'form-control', placeholder: I18n.t('views.session.email'), autocomplete: 'off' %>

              <%= f.password_field :password, class: 'form-control', placeholder: I18n.t('views.session.password') %>

              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= I18n.t('views.session.remember_me') %></span>
              <% end %>

              <%= f.submit "サインイン", class: "btn btn-primary" %>
            <% end %>
            <ul>
              <li><%= link_to I18n.t('views.session.create_account'), sign_up_path %></li>
              <li><%= link_to I18n.t('views.session.forgot_password'), new_password_reset_path %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</selction>
