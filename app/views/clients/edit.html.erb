<% provide(:title, 'Information') %>

<section class="client-info user-info">
  <div class="container">
    <div class="row">
      <div class="body col-md-8 col-md-offset-2">
        <div class="row">
          <div class="face col-md-5">
            <%= image_tag @client.profile.logo_url %>
          </div>
          <div class="info col-md-7">
            <h2><%= @client.company_name %></h2>
          </div>
        </div>
        <div class="row">
          <div class="edit-form col-md-12">

            <h3>担当者情報</h3>
            <%= form_for(@client, url: { controller: :clients, action: :update }) do |f| %>
              <div class="field-block row">
                <div class="col-md-3">
                  <%= f.label :last_name, class: 'form-label' %>
                </div>
                <div class="col-md-8">
                  <%= f.text_field :last_name, class: 'form-control', autocomplete: 'off' %>
                  <%= render 'shared/error', object: f.object, field: :last_name %>
                </div>
              </div>

              <div class="field-block row">
                <div class="col-md-3">
                  <%= f.label :first_name, class: 'form-label' %>
                </div>
                <div class="col-md-8">
                  <%= f.text_field :first_name, class: 'form-control', autocomplete: 'off' %>
                  <%= render 'shared/error', object: f.object, field: :first_name %>
                </div>
              </div>

              <div class="field-block row">
                <div class="col-md-3">
                  <%= f.label :username, class: 'form-label' %>
                </div>
                <div class="col-md-8">
                  <%= f.text_field :username, class: 'form-control', autocomplete: 'off' %>
                  <%= render 'shared/error', object: f.object, field: :username %>
                </div>
              </div>

              <div class="field-block row">
                <div class="col-md-3">
                  <%= f.label :email, 'Emailaddress', class: 'form-label' %>
                </div>
                <div class="col-md-8">
                  <%= f.email_field :email, class: 'form-control', autocomplete: 'off' %>
                  <%= render 'shared/error', object: f.object, field: :email %>
                </div>
              </div>

              <%= f.submit "Save changes", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="account-other col-md-12">
            <p><%= link_to 'パスワード変更',  new_password_reset_path %></p>
            <p><%= link_to 'アカウント削除', retire_client_path(username: @client.username) %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
