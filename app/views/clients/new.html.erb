<% provide(:title, 'Create client account') %>

<section class="create-clients new-page" id="create-client-profile">
  <div class="container">
    <div class="row">
      <div class="form col-md-8 col-md-offset-2">
        <h1>クライアントアカウント</h1>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= form_for(@client, url: { controller: :clients, action: :create  }, html: { multipart: true })do |f| %>
            <div class="client-profile fade-out">
              <%= render 'shared/client_step_bar', { first: 'complete', second: '' } %>
              <h2>会社情報登録</h2>
              <%= render 'clients/commons/form', { f: f } %>
              <div class="btn btn-primary" id="next-step">次へ</div>
            </div>
            <div class="client-user" id="signup-client-user">
              <%= render 'shared/client_step_bar', { first: 'complete', second: 'complete' } %>
              <h2>担当者情報登録</h2>
              <div class="signup-form">
                <%= f.fields_for :client_users, class: 'signup-form' do |uf| %>
                  <div class="last-name-form comn-form">
                    <%= uf.text_field :last_name, class: 'form-control last-name-form', placeholder: I18n.t('views.common.sign_up.last_name'), autocomplete: 'off' %>
                    <%= render 'shared/error', object: uf.object, field: :last_name %>
                  </div>

                  <div class="first-name-form comn-form">
                    <%= uf.text_field :first_name, class: 'form-control first-name-form', placeholder: I18n.t('views.common.sign_up.first_name'), autocomplete: 'off' %>
                    <%= render 'shared/error', object: uf.object, field: :first_name %>
                  </div>

                  <div class="username-form comn-form">
                    <%= uf.text_field :username, class: 'form-control username-form', placeholder: I18n.t('views.common.sign_up.username'), autocomplete: 'off' %>
                    <%= render 'shared/error', object: uf.object, field: :username %>
                  </div>

                  <div class="email-form comn-form">
                    <%= uf.email_field :email, class: 'form-control email-form', placeholder: I18n.t('views.common.sign_up.email'), autocomplete: 'off' %>
                    <%= render 'shared/error', object: uf.object, field: :email %>
                  </div>

                  <div class="password-form comn-form">
                    <%= uf.password_field :password, class: 'form-control password-form', placeholder: I18n.t('views.common.sign_up.password'), autocomplete: 'off' %>
                    <%= render 'shared/error', object: uf.object, field: :password %>
                  </div>

                  <div class="confirmation-form comn-form">
                    <%= uf.password_field :password_confirmation, class: 'form-control confirmation-form', placeholder: I18n.t('views.common.sign_up.confirmation'), autocomplete: 'off' %>
                    <%= render 'shared/error', object: uf.object, field: :password_confirmation %>
                  </div>
                <% end %>
              </div>
              <%= f.submit 'アカウント作成', class: "btn btn-primary" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
