<% provide(:title, 'Sign up') %>

<section class="select-signup-type">
  <div class="container">
    <div class="row">
      <%= link_to '/client/sign_up' do %>
      <div class="client-area col-md-6 col-xs-12" >
        <div class="contents">
          <%= image_tag 'static_pages/sign_up/client.png', alt: 'Client', class: 'client-icon icon' %>
          <h1 class="caption">フリーランスへ発注する</h1>
          <p><span class="glyphicon glyphicon-hand-up"></span>Click Here</p>
        </div>
      </div>
      <% end %>
      <%= link_to '/worker/sign_up' do %>
      <div class="worker-area col-md-6 col-xs-12">
        <div class="contents">
          <%= image_tag 'static_pages/sign_up/worker.png', alt: 'Worker', class: 'worker-icon icon' %>
          <h1 class="caption">仕事を受注する</h1>
          <p><span class="glyphicon glyphicon-hand-up"></span>Click Here</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
