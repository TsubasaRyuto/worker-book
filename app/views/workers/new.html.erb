<% provide(:title, 'Sign up') %>

<section class="sign-up" id="workers-signup">
  <div class="container">
    <div class="row">
      <div class="signup-form col-md-8 col-md-offset-2">
        <h1>Create Account of Freelancer</h1>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= form_for(@worker) do |f| %>

              <%= render 'shared/error', object: f.object %>

              <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>

              <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>

              <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>

              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>

              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>

              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmation' %>

              <%= f.submit "Create my account", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
